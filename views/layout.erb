<style>
span {
  float: right;
}
body {
  color: orange;
  background-color: teal;
}
</style>
<% if current_user %>
  <span><%= current_user.username %></span>
<% else %>
  <span>
    <p>If you already have an account, log in:</p>
    <form action='/' method='post'>
    Username:<br>
    <input type='text' name='Login_username'><br>
    Password:<br>
    <input type='password' name='Login_password'><br>
    </form>
    Or click <a href='/'>here</a> to sign up
  </span>
<% end %>
<%= yield %>